<Window x:Class="CapaPresentacion.wImportarAsistencia.wImportarAsistencia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion.wImportarAsistencia"
        mc:Ignorable="d"
        Title="wImportarAsistencia" Height="357.519" Width="689.098" Loaded="Window_Loaded">
    <Grid>
        <ComboBox x:Name="cboTrabajador" HorizontalAlignment="Left" Height="27" Margin="59,43,0,0" VerticalAlignment="Top" Width="340">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <Run Text="{Binding Nombre}" />
                        <Run Text="{Binding ApellidoPaterno}" />
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DatePicker HorizontalAlignment="Left" Height="26" Margin="176,139,0,0" VerticalAlignment="Top" Width="129"/>
        <Button x:Name="btnAgregarAsistencia" Content="Agregar Asistencia" HorizontalAlignment="Left" Height="26" Margin="414,139,0,0" VerticalAlignment="Top" Width="138" Click="btnAgregarAsistencia_Click"/>

    </Grid>
</Window>
